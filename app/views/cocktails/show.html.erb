
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <h1><%= @cocktail.name %></h1>
      <%= image_tag @cocktail.picture, style: "width: 200px" %>

      <!-- Ingredients -->

      <h3>Ingredients:</h3>
      <ul>
        <% @cocktail.doses.each do |d| %>
        <li> <%= "#{d.ingredient.name} #{d.description}" %> </li>
        <% end %>
      </ul>

      <!-- Dose Form -->
      <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.input :description, label: "amount", as: :string %>
      <%= f.input :ingredient, collection: Ingredient.all, prompt: "select one" %>
      <%= f.submit "Add", class: "btn btn-success"%>
      <% end %>
      <%= link_to 'Back', cocktails_path, class: "btn btn-danger" %>
    </div>
  </div>
</div>
